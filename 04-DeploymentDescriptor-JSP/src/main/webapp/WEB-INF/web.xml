  <servlet>
  <display-name>Hello JSP</display-name>
		<servlet-name>Hello JSP</servlet-name>
		<jsp-file>/Hello.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Hello JSP</servlet-name>
		<url-pattern>/HelloJspURLPattern</url-pattern>
	</servlet-mapping>
	
	
</web-app>